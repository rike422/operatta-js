{
  "name": "operatta-js",
  "description": "Collaborative editing using operational transformation",
  "version": "0.0.1",
  "author": "Akria Takahashi <rike422@gmail.com>",
  "ava": {
    "files": [
      "test/src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "verbose": true,
    "noCache": true,
    "babel": "inherit"
  },
  "bugs": {
    "url": "https://github.com/rike422/operatta/issues"
  },
  "dependencies": {
    "node-fetch": "^1.6.3",
    "socket.io": "1.5.1"
  },
  "devDependencies": {
    "ava": "avajs/ava#master",
    "ava-spec": "^1.0.1",
    "babel-cli": "^6.16.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-module-resolver": "3.0.0-beta.1",
    "babel-plugin-syntax-flow": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "codemirror": "^5.20.2",
    "coveralls": "^2.11.14",
    "eslint": "^3.8.1",
    "eslint-config-standard": "^6.2.0",
    "eslint-plugin-flowtype": "^2.21.0",
    "eslint-plugin-promise": "^3.3.0",
    "eslint-plugin-standard": "^2.0.1",
    "fetch-mock": "^5.5.0",
    "fixpack": "^2.3.1",
    "flow-bin": "^0.33.0",
    "jsdom": "^9.6.0",
    "mock-socket": "^5.0.1",
    "nyc": "^8.3.2",
    "power-assert": "^1.4.1",
    "sinon": "^1.17.6",
    "snazzy": "^5.0.0",
    "source-map-support": "^0.4.3",
    "standard": "^8.3.0"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "homepage": "http://operational-transformation.github.com",
  "keywords": [
    "babel",
    "flowtype",
    "operational transformation",
    "ot"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/github.com/rike422/operatta/raw/master/LICENSE"
    }
  ],
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rike422/operatta-js"
  },
  "scripts": {
    "build": "babel src -d lib",
    "check": "npm run lint && npm run test",
    "clean": "rm -rf lib",
    "fixpack": "fixpack",
    "flow": "flow check src",
    "lint": "npm run standard && npm run flow",
    "postinstall": "npm run fixpack",
    "prebuild": "npm run check && npm run clean",
    "prepublish": "npm run build",
    "prerelease": "npm run build",
    "report": "nyc report --reporter=html",
    "standard": "standard 'src/**/*.js' 'test/src/**/*.js' --verbose | snazzy",
    "test": "NODE_ENV=AVA BABEL_DISABLE_CACHE=1 ava",
    "test:ci": "NODE_ENV=AVA BABEL_DISABLE_CACHE=1 nyc ava",
    "test:watch": "NODE_ENV=AVA BABEL_DISABLE_CACHE=1 ava --watch"
  },
  "standard": {
    "ignore": [
      "lib/"
    ],
    "globals": [
      "describe",
      "test",
      "sinon"
    ],
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "flowtype/define-flow-type": 1,
      "flowtype/use-flow-type": 1
    },
    "parser": "babel-eslint"
  }
}
