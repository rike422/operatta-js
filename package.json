{
  "name": "operatta",
  "description": "Collaborative editing using operational transformation",
  "version": "0.0.1",
  "author": "Akria Takahashi <rike422@gmail.com>",
  "ava": {
    "files": [
      "test/src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "verbose": true,
    "noCache": true,
    "babel": "inherit"
  },
  "bugs": {
    "url": "https://github.com/rike422/operatta/issues"
  },
  "dependencies": {
    "node-fetch": "^1.6.3",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2"
  },
  "devDependencies": {
    "ava": "avajs/ava#master",
    "ava-spec": "1.1.1",
    "babel-cli": "6.26.0",
    "babel-eslint": "7.2.3",
    "babel-plugin-module-resolver": "3.1.1",
    "babel-plugin-syntax-flow": "6.18.0",
    "babel-plugin-transform-decorators-legacy": "1.3.5",
    "babel-plugin-transform-flow-strip-types": "6.22.0",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-power-assert": "1.0.0",
    "babel-preset-react": "6.24.1",
    "babel-preset-stage-0": "6.24.1",
    "codemirror": "5.38.0",
    "coveralls": "2.13.3",
    "eslint": "3.19.0",
    "eslint-config-standard": "6.2.1",
    "eslint-plugin-flowtype": "2.47.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "2.0.1",
    "fetch-mock": "5.13.1",
    "fixpack": "2.3.1",
    "flow-bin": "0.72.0",
    "jsdom": "9.8.3",
    "mock-socket": "6.0.4",
    "nyc": "10.0.0",
    "power-assert": "1.4.2",
    "sinon": "1.17.6",
    "snazzy": "5.0.0",
    "source-map-support": "0.4.6",
    "standard": "8.6.0"
  },
  "files": [
    "lib",
    "package.json"
  ],
  "homepage": "http://operational-transformation.github.com",
  "keywords": [
    "babel",
    "flowtype",
    "operational transformation",
    "ot"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/github.com/rike422/operatta/raw/master/LICENSE"
    }
  ],
  "main": "./lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rike422/operatta-js"
  },
  "scripts": {
    "build": "babel src -d lib",
    "build:watch": "babel -w src -d demo/lib",
    "check": "npm run lint && npm run test",
    "clean": "rm -rf lib",
    "fixpack": "fixpack",
    "flow": "flow check src",
    "lint": "npm run standard && npm run flow",
    "postbuild": "cp -r lib demo/",
    "postinstall": "npm run fixpack",
    "prebuild": "npm run clean",
    "prepublish": "npm run build",
    "prerelease": "npm run build",
    "report": "nyc report --reporter=html",
    "standard": "standard 'src/**/*.js' 'test/src/**/*.js' --verbose | snazzy",
    "test": "NODE_ENV=AVA BABEL_DISABLE_CACHE=1 ava",
    "test:ci": "NODE_ENV=AVA BABEL_DISABLE_CACHE=1 nyc ava",
    "test:watch": "NODE_ENV=AVA BABEL_DISABLE_CACHE=1 ava --watch"
  },
  "standard": {
    "ignore": [
      "lib/"
    ],
    "globals": [
      "describe",
      "test",
      "sinon"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "plugins": [
      "flowtype"
    ],
    "rules": {
      "flowtype/define-flow-type": 1,
      "flowtype/use-flow-type": 1
    },
    "parser": "babel-eslint"
  }
}
